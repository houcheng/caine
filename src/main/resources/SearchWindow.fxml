<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.VBox?>
<VBox fx:id="inputId" alignment="center" xmlns="http://javafx.com/javafx/8.0.102-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.caine.ui.SearchController">
   <children>
      <TextField fx:id="input" alignment="TOP_CENTER" onKeyTyped="#handleKeyTyped" onKeyPressed="#handleKeyPressed" promptText="search keyword">
         <font>
            <Font size="26.0" />
         </font>
         <effect>
            <DropShadow />
         </effect>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <FlowPane.margin>
            <Insets />
         </FlowPane.margin>
      </TextField>
      <ListView fx:id="listView" />
   </children>
</VBox>
